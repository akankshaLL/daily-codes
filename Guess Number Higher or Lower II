#include <vector>
#include <algorithm>

class Solution {
public:
    int getMoneyAmount(int n) {
        std::vector<std::vector<int>> dp(n + 1, std::vector<int>(n + 1, 0));

        
        for (int len = 2; len <= n; ++len) {
            
            for (int i = 1; i <= n - len + 1; ++i) {
                int j = i + len - 1;
                dp[i][j] = INT_MAX;

                
                for (int k = i; k <= j; ++k) {
                    int cost = k + std::max((k > i) ? dp[i][k - 1] : 0, (k < j) ? dp[k + 1][j] : 0);
                    dp[i][j] = std::min(dp[i][j], cost);
                }
            }
        }
        return dp[1][n];
    }
};
