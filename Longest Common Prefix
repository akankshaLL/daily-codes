#include <stdlib.h>
#include <string.h>

char* longestCommonPrefix(char** strs, int strsSize) {
    if (strsSize == 0) {
        return ""; 
    }

    char* firstStr = strs[0];
    int len = strlen(firstStr);

    for (int i = 0; i < len; i++) {
        char currentChar = firstStr[i];
        for (int j = 1; j < strsSize; j++) {
            if (i >= strlen(strs[j]) || strs[j][i] != currentChar) {
                firstStr[i] = '\0';
                return firstStr;
            }
        }
    }
    
    return firstStr;
}
