#include <stdlib.h>
#include <string.h>

int peopleAwareOfSecret(int n, int delay, int forget) {
    long long dp[n + 1];
    memset(dp, 0, sizeof(dp));

    
    dp[1] = 1;

    
    long long mod = 1e9 + 7;

    long long totalAware = 1;
    for (int i = 2; i <= n; i++) {
        long long newPeople = 0;
        
        
        for (int j = 1; j < i; j++) {
            if (i >= j + delay && i < j + forget) {
                newPeople = (newPeople + dp[j]) % mod;
            }
        }
        
        dp[i] = newPeople;
        totalAware = (totalAware + newPeople) % mod;
        
        if (i >= forget) {
            totalAware = (totalAware - dp[i - forget] + mod) % mod;
        }
    }

    return (int)totalAware;
}
